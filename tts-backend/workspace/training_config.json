{
  "output_path": "/workspace/my-tts-checkpoints",
  "dataset_config": {
    "format": "csv",
    "path": "/workspace/tts-dataset/metadata.csv"
  },
  "audio": {
    "sample_rate": 16000,
    "num_mels": 80,
    "win_length": 1024,
    "hop_length": 256,
    "fft_size": 1024,
    "mel_fmin": 0,
    "mel_fmax": 8000
  },
  "model": "vits",

  
  "use_d_vector_file": false,
  "use_speaker_embedding": false,
  "loss": "l1",
  "optimizer": {
    "optimizer": "adam",
    "learning_rate": 0.0001,
    "weight_decay": 0.000001,
    "grad_clip": 1.0
  },
  "trainer": {
    "batch_size": 16,
    "eval_batch_size": 8,
    "epochs": 300,
    "eval_split_size": 0.1,
    "test_split_size": 0.0,
    "run_eval": true,
    "save_best_after": 5,
    "save_every_epoch": true,
    "print_step": 10,
    "eval_step": 100,
    "save_step": 200,
    "num_loader_workers": 2
  },
  "seed": 42,
  "use_cuda": true
}
