{
  "model": "vits",
  "vocoder_model": null,
  "vocoder_config_path": null,
  "run_name": "hindi_vits_run",
  "output_path": "./workspace/my-vits-checkpoints",

  "characters": {
    "characters_class": "TTS.tts.utils.text.characters.Graphemes",
    "pad": "_",
    "eos": "~",
    "bos": "^",
    "blank": "<BLNK>",
    "characters": " abcdefghijklmnopqrstuvwxyzअआइईउऊऋऌऍऑऎएऐऒओऔअंअःकखगघङचछजझञटठडढणतथदधनपफबभमयरलवशषसहळऴऩऽािीुूृॄॅेैॉोौंःँ्",
    "punctuations": ".,!?-\"':;()।॥॰"
  },

  "datasets": [
    {
      "formatter": "ljspeech",
      "dataset_name": "hindi_dataset",
      "path": "./workspace/tts-dataset",
      "meta_file_train": "metadata.csv",
      "meta_file_val": "metadata.csv",
      "csv_separator": "|",
      "delimiter": "|",
      "language": "hi",
      "phonemizer": "",
      "meta_file_attn_mask": "",
      "ignored_speakers": null
    }
  ],

  "audio": {
    "sample_rate": 16000,
    "num_mels": 80,
    "fft_size": 1024,
    "win_length": 1024,
    "hop_length": 256,
    "mel_fmin": 0,
    "mel_fmax": 8000,
    "stats_path": null,
    "signal_norm": true,
    "min_level_db": -100,
    "ref_level_db": 20,
    "max_norm": 4.0,
    "clip_norm": true,
    "symmetric_norm": true
  },

  "trainer": {
    "batch_size": 32,
    "eval_batch_size": 16,
    "epochs": 1000,
    "eval_split_size": 0.1,
    "run_eval": true,
    "print_step": 10,
    "eval_step": 100,
    "save_step": 200,
    "save_best_after": 5,
    "save_every_epoch": true,
    "test_split_size": 0.0,
    "num_loader_workers": 4,
    "num_eval_loader_workers": 4
  },

  "optimizer": "AdamW",
  "optimizer_params": {
    "betas": [0.8, 0.99],
    "eps": 1e-9,
    "weight_decay": 0.01
  },
  "optimizer_disc": "AdamW",
  "optimizer_disc_params": {
    "betas": [0.8, 0.99],
    "eps": 1e-9,
    "weight_decay": 0.01
  },

  "lr_gen": 0.0002,
  "lr_disc": 0.0002,
  "lr_scheduler_gen": "ExponentialLR",
  "lr_scheduler_gen_params": {
    "gamma": 0.999875,
    "last_epoch": -1
  },
  "lr_scheduler_disc": "ExponentialLR",
  "lr_scheduler_disc_params": {
    "gamma": 0.999875,
    "last_epoch": -1
  },

  "grad_clip": [1000.0, 1000.0],
  "scheduler_after_epoch": true,

  "kl_loss_alpha": 1.0,
  "disc_loss_alpha": 1.0,
  "gen_loss_alpha": 1.0,
  "feat_loss_alpha": 1.0,
  "mel_loss_alpha": 45.0,
  "dur_loss_alpha": 1.0,
  "speaker_encoder_loss_alpha": 1.0,

  "use_cuda": false,
  "seed": 42,
  "return_wav": true,
  "compute_linear_spec": true,

  "use_weighted_sampler": false,
  "weighted_sampler_attrs": {},
  "weighted_sampler_multipliers": {},

  "r": 1,
  "add_blank": true,
  "enable_eos_bos_chars": true,

  "test_sentences": [
    ["आप अपना चेहरा हमेशा प्रकाश की ओर रखते हैं।"]
  ],

  "num_speakers": 0,
  "use_speaker_embedding": false,
  "speakers_file": null,
  "speaker_embedding_channels": 256,
  "language_ids_file": null,
  "use_language_embedding": false,

  "use_d_vector_file": false,
  "d_vector_file": null,
  "d_vector_dim": null,

  "model_args": {
    "use_phonemes": false,
    "speaker_encoder_config": null,
    "speaker_encoder_model_path": null,
    "num_chars": 200,
    "hidden_channels": 192,
    "hidden_channels_dp": 256,
    "hidden_channels_enc": 512,
    "n_heads_enc": 2,
    "n_layers_enc": 6,
    "kernel_size_enc": 3,
    "dropout_p_enc": 0.1,
    "dropout_p_dec": 0.1,
    "kernel_size_dec": 7,
    "dilation_rate": 1,
    "n_layers_dec": 4,
    "hop_length": 256,
    "win_length": 1024,
    "use_sdp": true,
    "noise_scale": 0.667,
    "inference_noise_scale": 0.333,
    "length_scale": 1,
    "noise_scale_dp": 1.0,
    "inference_noise_scale_dp": 0.333,
    "max_inference_len": null,
    "init_discriminator": true,
    "use_spectral_norm": true,
    "periods_discriminator": [2, 3, 5, 7, 11],
    "upsample_rates": [8, 8, 2, 2],
    "upsample_kernel_sizes": [16, 16, 4, 4],
    "upsample_initial_channel": 512,
    "resblock_kernel_sizes": [3, 7, 11],
    "resblock_dilation_sizes": [[1, 3, 5], [1, 3, 5], [1, 3, 5]],
    "encoder_sample_rate": 16000
  },

  "length_scale": 1,
  "inference_noise_scale": 0.33,
  "inference_noise_scale_dp": 0.33,

  "train_samples": 10,
  "eval_samples": 1,
  "text_cleaner": "basic_cleaners",
  "stop_on_plateau_patience": 20
}
